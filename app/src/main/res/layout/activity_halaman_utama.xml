<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/tan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".HalamanUtama">

        <TextView
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="157dp"
            android:layout_marginTop="55dp"
            android:text="ATARIKI"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:text="Jl.Prof Ali Hasyimi, Banda Aceh"
            android:textColor="#000"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:theme="?attr/actionBarTheme"
            android:background="@color/tan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/berhasil"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/tan"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:id="@+id/total"
                android:layout_marginRight="10dp"
                android:textSize="16dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Discount"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:id="@+id/discount"
                android:layout_marginRight="10dp"
                android:textSize="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total Belanja"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/belanja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="40dp"
            android:text="Terima Kasih"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="10dp"
            android:text="Atas Kunjungan Anda di"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="170dp"
            android:layout_marginTop="10dp"
            android:text="Atariki"
            android:textColor="#000"
            android:textSize="12dp" />

    </LinearLayout>
</ScrollView>